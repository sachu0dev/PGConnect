generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Membership {
  FREE
  BASIC
  PREMIUM
}

model User {
  id                 String    @id @default(uuid())
  username           String    @unique
  email              String    @unique
  password           String?
  phoneNumber        String?
  verifyCode         String?
  verifyCodeExpireAt DateTime?
  isVerified         Boolean   @default(false)
  googleId           String?   @unique
  isOwner            Boolean   @default(false)
  aadhar             String?
  aadharImage        String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  membership Membership @default(FREE)

  Pg              Pg[]
  Message         Message[]
  callbackRequest callbackRequest[]
  ChatRoom        ChatRoom[]
  Subscription    Subscription?
}

model Subscription {
  id     String @id @default(uuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  merchantSubscriptionId String?
  phonePaySubscriptionId String?
  planType               Membership
  startDate              DateTime           @default(now())
  nextBillingDate        DateTime?
  status                 SubscriptionStatus @default(ACTIVE)

  maxCharges  Int @default(1)
  chargesMade Int @default(0)
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  PENDING
}

model Pg {
  id               String   @id @default(uuid())
  name             String
  contact          String
  city             String
  address          String
  rentPerMonth     Float
  description      String
  capacity         Int
  capacityCount    Int      @default(0)
  images           String[]
  bhk              Int
  isDummy          Boolean  @default(false)
  isAcceptingGuest Boolean  @default(true)
  gender           Gender
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  coordinates     String
  ChatRoom        ChatRoom[]
  callbackRequest callbackRequest[]
}

model City {
  id   String @id @default(uuid())
  name String @unique
}

model callbackRequest {
  id          String @id @default(uuid())
  phoneNumber String
  userId      String
  pgId        String
  user        User   @relation(fields: [userId], references: [id])
  pg          Pg     @relation(fields: [pgId], references: [id])
}

model ChatRoom {
  id       String    @id
  userId   String
  pgId     String
  pg       Pg        @relation(fields: [pgId], references: [id])
  user     User      @relation(fields: [userId], references: [id])
  messages Message[]
}

enum Status {
  SENT
  READ
}

model Message {
  id         String   @id @default(uuid())
  chatRoomId String
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id])
  senderId   String
  sender     User     @relation(fields: [senderId], references: [id])
  text       String
  createdAt  DateTime @default(now())
  status     Status   @default(SENT)
}

enum Gender {
  MALE
  FEMALE
  ANY
}
